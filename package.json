{
  "name": "@servall/router",
  "version": "0.8.2",
  "description": "Common koa routing for Servall",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Servall Development",
    "email": "admin@servalldev.com",
    "url": "https://www.servalldev.com"
  },
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.servalldatasystems.com"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "lint": "dev lint",
    "fix": "dev lint --fix",
    "test": "jest",
    "cz": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "8",
    "@serafin/schema-builder": "0.9",
    "@servall/commitlint": "1.0.0-rc.1",
    "@servall/dev": "0.0.10-beta.11",
    "@servall/router": "link:./.",
    "@servall/router-testing": "0.4",
    "@types/fs-extra": "8",
    "@types/jest": "24",
    "@types/js-yaml": "3",
    "@types/koa": "2",
    "@types/koa-bodyparser": "4",
    "@types/koa-router": "7",
    "@types/lodash": "4",
    "@types/yup": "0.26",
    "ajv": "6",
    "commitizen": "4",
    "cz-conventional-changelog": "3",
    "husky": "3",
    "jest": "24",
    "koa": "2",
    "koa-bodyparser": "4",
    "koa-router": "7",
    "lint-staged": "9",
    "tmp-promise": "1",
    "ts-jest": "24",
    "typescript": "3",
    "yup": "0.26"
  },
  "peerDependencies": {
    "@serafin/schema-builder": "0.9",
    "ajv": "6",
    "koa": "2",
    "koa-bodyparser": "4",
    "koa-router": "7",
    "yup": "0.26"
  },
  "dependencies": {
    "@serafin/open-api": "3",
    "@servall/mapper": "0.1",
    "@servall/ts": "0.2",
    "fs-extra": "8",
    "js-yaml": "3",
    "lodash": "4",
    "resolve-from": "5",
    "stacktrace-parser": "0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": null,
    "testRegex": "(tests/.*|src/.*\\.test)\\.(ts|js)$",
    "testPathIgnorePatterns": [
      ".yarn-cache"
    ],
    "modulePathIgnorePatterns": [
      ".yarn-cache"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": "yarn lint"
  },
  "commitlint": {
    "extends": [
      "@servall/commitlint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
